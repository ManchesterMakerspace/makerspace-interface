<table class="table table-bordered table-striped">
	<caption>Member Profile</caption>
	<tbody>
			<tr>
				<td colspan="6">Name: <%=@member.fullname%> </td>
			</tr>
      <tr>
        <td colspan="6">Status: <%=@member.status%> </td>
      </tr>
      <tr>
        <td colspan="6">Expiration Date: <%="#{@member.expirationTime.mon}/#{@member.expirationTime.day}/#{@member.expirationTime.year}"%> </td>
      </tr>
      <tr>
        <td colspan="3"><%= link_to "Edit", edit_member_path(@member), class: "btn btn-default" %></td>
				<td colspan="3">
					<% if @member.status == 'Revoked' %>
					  <%= button_to "Restore", restore_path, method: :post, data: { confirm: "Are you sure you wish to restore #{@member.fullname}'s membership'?" }, class: "btn btn-danger" %>
					<% else %>
						<%= button_to "Revoke", revoke_path, method: :post, data: { confirm: "Are you sure you wish to revoke #{@member.fullname}'s membership'?" }, class: "btn btn-danger" %>
					<%end%>
				</td>
      </tr>
	</tbody>
</table>
